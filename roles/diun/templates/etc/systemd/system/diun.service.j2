# {{ ansible_managed }}
[Unit]
Description=diun
After=syslog.target
After=network.target

[Service]
RestartSec=2s
Type=simple
User=diun
Group=diun
ExecStart={{ diun_dir }}/diun serve --config {{ diun_dir }}/diun.yml --log-level info
Restart=always
Environment=TZ="{{ diun_tz }}"
# Environment=DIUN_DB_PATH=/var/lib/diun/diun.db

[Install]
WantedBy=multi-user.target
